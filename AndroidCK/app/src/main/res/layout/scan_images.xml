<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/ic_back_page"
        android:layout_alignParentStart="true"/>
    
    <ImageView
        android:id="@+id/image_scan"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_below="@id/btnBack"
        android:background="@drawable/document"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/image_scan"
        android:background="#0085FF">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_gallery"
            style="@style/FabStyle"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/btn_gallery"
            android:layout_marginLeft="10dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_scan"
            style="@style/FabStyle"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/scanner_24"
            android:layout_gravity="center"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_save"
            style="@style/FabStyle"
            android:layout_gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_save" />

    </RelativeLayout>


</RelativeLayout>