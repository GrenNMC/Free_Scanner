<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.FolderActivity">

    <RelativeLayout
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_page"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Document"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="25dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/nav_bar"
        >
        <androidx.appcompat.widget.SearchView
            android:layout_width="250dp"
            android:id="@+id/search_bar_edit"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:iconifiedByDefault="false"
            app:queryBackground="@null"
            android:background="@drawable/shape_search"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/search_bar_edit"
            android:src="@drawable/ic_menu"/>

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_view_list_file"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@color/teal_700"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/item_delete"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_delete"
            android:background="@drawable/circle_button"
            />
        <ImageView
            android:id="@+id/item_scan"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_scan"
            android:background="@drawable/circle_button"
            />
        <ImageView
            android:id="@+id/item_add_folder"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_add_folder"
            android:background="@drawable/circle_button"
            />
    </RelativeLayout>

</RelativeLayout>